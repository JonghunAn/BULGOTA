<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarAlwaysDrawVerticalTrack="true">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="70dp"
        android:paddingBottom="100dp">

        <LinearLayout
            android:id="@+id/pbg-1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@id/pbg1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/judgement"
                app:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="음주 관련 법규"
                android:textSize="22dp"
                android:textAlignment="center"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:fontFamily="@font/nanum_square_round_extra_bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/pbg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="우리나라 음주운전 관련볍은 아래와 같습니다."
            android:textSize="19dp"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            android:layout_margin="7dp"
            app:layout_constraintBottom_toTopOf="@id/pbg2"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanum_square_round_bold"/>

        <ImageView
            android:id="@+id/pbg2"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/law44"
            app:layout_constraintTop_toBottomOf="@id/pbg1"
            tools:layout_editor_absoluteX="18dp" />

        <TextView
            android:id="@+id/pbg3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="술에 취한 상태는 혈중 알코올 농도 0.03%로,\n\n음주량이 맥주 한잔 이어도 해당합니다."
            android:textSize="19dp"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/pbg2"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanum_square_round_bold"/>

        <ImageView
            android:id="@+id/pbg4"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/punish"
            app:layout_constraintTop_toBottomOf="@id/pbg3" />

        <TextView
            android:id="@+id/pbg5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="전동킥보드 음주운전도 자동차와 마찬가지로,\n\n혈중 알코올 농도에 따라 형량이 달라집니다."
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/pbg4"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanum_square_round_bold"/>

        <ImageView
            android:id="@+id/pbg6"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/december"
            app:layout_constraintTop_toBottomOf="@id/pbg5" />

        <TextView
            android:id="@+id/pbg7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="12월 부터 전동킥보드가 규제가 약해지지만,\n\n 여전히 음주운전을 할시 처벌을 받습니다."
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/pbg6"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanum_square_round_bold"/>

        <LinearLayout
            android:id="@+id/pbg8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/pbg7"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/judgement"
                android:layout_weight="1"
                app:tint="@color/colorPrimary" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/court"
                android:layout_weight="1"
                app:tint="@color/colorPrimary" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/law"
                android:layout_weight="1"
                app:tint="@color/colorPrimary" />
        </LinearLayout>

        <TextView
            android:id="@+id/pbg9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="처벌 내용"
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/pbg8"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanum_square_round_bold"/>

        <ImageView
            android:id="@+id/pbg10"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/punishment"
            app:layout_constraintTop_toBottomOf="@id/pbg9" />

        <LinearLayout
            android:id="@+id/pbg13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/pbg10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/code_icon_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="불고타"
                android:textSize="23dp"
                android:textAlignment="center"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:fontFamily="@font/logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNotice"
                android:text="다른 도로 주행 법규도 준수해주세요!!!\n안전한 주행 되세요."
                android:textSize="17dp"
                android:textAlignment="center"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:fontFamily="@font/nanum_square_round_bold"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
