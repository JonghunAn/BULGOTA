<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarAlwaysDrawVerticalTrack="true">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingRight="17dp">

        <ImageView
            android:id="@+id/gui1"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@id/gui2"
            android:src="@drawable/guide1"
            />
        <ImageView
            android:id="@+id/gui2"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/gui1"
            android:src="@drawable/guide2"
            />
        <ImageView
            android:id="@+id/gui3"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/gui2"
            android:src="@drawable/guide3"
            />
        <ImageView
            android:id="@+id/gui4"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/gui3"
            android:src="@drawable/guide4"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>