<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp"
    tools:context=".DetoxAnalysisActivity"
    android:layout_weight="1">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_notice_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:background="@drawable/round_square_shape2"

        android:layout_weight="60"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_my_alchol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_bold"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal"
            android:text="현재 '나'의 알콜수치"
             />

        <TextView
            android:id="@+id/tv_alchol_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.06"
            android:textSize="40sp"
            android:textColor="@android:color/holo_red_light"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanum_square_round_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_my_alchol"/>

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_alchol_level">

            <TextView
                android:fontFamily="@font/nanum_square_round_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 내 상태는"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_my_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_extra_bold"
                android:textSize="15sp"
                android:textColor="@android:color/holo_red_light"
                android:text="주행불가"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_bold"
                android:text=" 상태입니다."
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_lefttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_square_round_bold"
            android:textSize="20sp"
            android:text="예상 주행 가능 시간은"
            app:layout_constraintTop_toBottomOf="@id/ll_state"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/nanum_square_round_bold"
            android:textSize="20dp"
            android:hint="받아오는 int timer 값 string 변환 후 출력"
            app:layout_constraintTop_toBottomOf="@id/tv_lefttime"
            android:textAlignment="center"/>


        <ImageView
            android:id="@+id/img_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_warning"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_timer"/>

        <RelativeLayout
            android:id="@+id/rl_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rec_btn_info"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/img_warning">

            <TextView
                android:id="@+id/tv_alarm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nanum_square_round_bold"
                android:text="주행가능 시 알람받기"
                android:textColor="@color/colorWhite"
                android:layout_centerVertical="true"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_alarm_text"
                android:outlineAmbientShadowColor="@color/colorWhite"
                android:src="@drawable/img_alarmbell"
                app:tint="@color/colorWhite" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/cl_notice_view"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>